<objectTemplate xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
                oid="987585f0-d457-44d7-8550-d9f1e954dc33">
    <name>template-delete-description</name>
    <documentation>Object template responsible for clearing the `description` when a source account is gone.</documentation>
    <includeRef oid="7223de34-5797-4f71-a4b8-27e33eb11300"/>
    <mapping>
        <strength>strong</strength>
        <expression>
            <script>
                <code>
                    null
                </code>
            </script>
        </expression>
        <target>
            <path>description</path>
            <set>
                <predefined>all</predefined>
            </set>
        </target>
    </mapping>
</objectTemplate>
