<archetype xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
           oid="fbe37f25-1026-4293-ac48-071cc56b1a36">
    <name>program</name>
    <displayName>Study Program</displayName>
    <inducement>
        <focusMappings>
            <mapping>
                <strength>strong</strength>
                <source>
                    <path>identifier</path>
                </source>
                <expression>
                    <script>
                        <code>'program-' + identifier</code>
                    </script>
                </expression>
                <target>
                    <path>name</path>
                </target>
            </mapping>
        </focusMappings>
    </inducement>
    <archetypePolicy>
        <display>
            <label>Study program</label>
            <pluralLabel>Study programs</pluralLabel>
            <icon>
                <cssClass>fa fa-graduation-cap</cssClass>
                <color>brown</color>
            </icon>
        </display>
    </archetypePolicy>
</archetype>
